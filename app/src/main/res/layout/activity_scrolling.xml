    <Button
        android:id="@+id/addItemA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:text="Add Item A" />
    <Button
        android:id="@+id/addItemB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
